{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["/src/components/*"],
      "@/constants": ["/src/constants/*"],
      "@/assets/*": ["/src/app/assets/*"],
      "@/data/*": ["/src/app/assets/data/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
